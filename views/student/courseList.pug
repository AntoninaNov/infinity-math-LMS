extends ../common/layout.pug

block content
    h1.text-2xl.font-bold.mb-4 Course List
    div.flex.flex-wrap.-mx-2
        each course in courses
            div(class="w-full sm:w-1/2 md:w-1/3 px-2 mb-4")
                div.bg-white.shadow-lg.rounded-lg.overflow-hidden
                    img(class="w-full", src=course.thumbnail, alt=`Image for ${course.title}`)
                    div.p-4
                        h2.text-xl.font-bold.mb-2 #{course.title}
                        p.text-gray-700.mb-4 #{course.description}
                        a(href=`/courses/${course.id}` class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded") Details
