extends common/layout

block content
    .container.mx-auto.p-4.max-w-md
        h1.text-3xl.font-bold.mb-8.text-center Login
        form(method="POST" action="/login" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4")
            .mb-4
                label(for="email" class="block text-gray-700 text-sm font-bold mb-2") Email
                input(type="email" id="email" name="email" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
            .mb-6
                label(for="password" class="block text-gray-700 text-sm font-bold mb-2") Password
                input(type="password" id="password" name="password" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline")
            .flex.items-center.justify-between
                button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Log in
            .mt-4.text-center
                p.text-sm Don't have an account?
                    a(href="/register" class="text-blue-500 hover:text-blue-700") Register here
