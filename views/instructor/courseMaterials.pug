extends ../common/layout.pug

block content
    .container.mx-auto.py-8
        h1.text-4xl.font-bold.mb-8 Upload Course Materials
        form(method="POST" action="/instructor/api/courses/#{course.id}/materials" enctype="multipart/form-data" class="max-w-lg mx-auto")
            .mb-4
                label(for="material" class="block text-gray-700 text-sm font-bold mb-2") Material
                input#material(type="file" name="material" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required)
            button(type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Upload Material
